<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="shortcut icon" href="img/logos.png" type="image/x-icon" />

		<!-- Bootstrap Icon -->
		<link
			rel="stylesheet"
			href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
		/>

		<!-- CSS file -->
		<link rel="stylesheet" href="css/output.css" />

		<title>Code Studio Software Company</title>
	</head>

	<body class="relative">
		<!-- Navbar Section -->
		<div class="container mx-auto">
			<div class="py-5 navbar bg-base-100">
				<div class="navbar-start">
					<div class="dropdown">
						<label tabindex="0" class="btn btn-ghost lg:hidden">
							<svg
								xmlns="http://www.w3.org/2000/svg"
								class="w-5 h-5"
								fill="none"
								viewBox="0 0 24 24"
								stroke="currentColor"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M4 6h16M4 12h8m-8 6h16"
								/>
							</svg>
						</label>
						<ul
							tabindex="0"
							class="p-2 mt-3 shadow menu menu-compact dropdown-content bg-base-100 rounded-box w-52"
						>
							<li><a href="/" class="uppercase">Home</a></li>
							<li>
								<a href="/about-us" class="uppercase">About Us</a>
							</li>
							<li><a href="/team" class="uppercase">Our Team</a></li>
							<li>
								<a href="/portfolio" class="uppercase">Portfolio</a>
							</li>
							<li><a href="/venture" class="uppercase">Venture</a></li>
							<li><a href="/gallery" class="uppercase">Gallery</a></li>
						</ul>
					</div>
					<a class="text-xl normal-case cursor-pointer" href="/">
						<img
							src="./img/Logo of Code Studio 2.png"
							class="w-36"
							alt="Code Studio Logo"
						/>
					</a>
				</div>
				<div class="hidden navbar-center lg:flex">
					<ul class="px-1 menu menu-horizontal">
						<li>
							<a href="/" class="uppercase hover:text-primary hover:bg-white"
								>Home</a
							>
						</li>
						<li>
							<a
								href="/about-us"
								class="uppercase hover:text-primary hover:bg-white"
								>About Us</a
							>
						</li>
						<li>
							<a
								href="/team"
								class="uppercase hover:text-primary hover:bg-white"
								>Our Team</a
							>
						</li>
						<li>
							<a
								href="/portfolio"
								class="uppercase hover:text-primary hover:bg-white"
								>Portfolio</a
							>
						</li>
						<li>
							<a
								href="/venture"
								class="uppercase hover:text-primary hover:bg-white"
								>Venture</a
							>
						</li>
						<li>
							<a
								href="/gallery"
								class="uppercase hover:text-primary hover:bg-white"
								>Gallery</a
							>
						</li>
					</ul>
				</div>
				<div class="navbar-end">
					<a
						href="/contact-us"
						class="btn btn-outline btn-primary hover:text-white"
						>Contact Us</a
					>
				</div>
			</div>
		</div>

		<!-- Sticky Whatsapp Icon -->
		<div
			class="fixed border rounded-full shadow-2xl z-[100] right-[5%] top-[85%]"
		>
			<a
				href="https://www.whatsapp.com/"
				target="_blank"
				class="flex items-center justify-center duration-150 rounded-full cursor-pointer hover:shadow-2xl"
			>
				<img
					src="./img/wp-icon.png"
					class="w-16 xl:w-20 h-fit"
					style="object-fit: contain"
				/>
				<!-- <i class="text-4xl bi bi-whatsapp"> </i> -->
			</a>
		</div>
	</body>
</html>
